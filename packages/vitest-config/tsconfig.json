{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", ".turbo"],
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "skipLibCheck": true,
    "outDir": "./dist"
  }
}
