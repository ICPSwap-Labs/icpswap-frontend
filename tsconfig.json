{
  "compilerOptions": {
    "target": "ES2022",

    // Modules
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "experimentalResolver": true,
    "esm": true
  }
}
